<h1 class="jumbotron">Your Reading List</h1>

<div class="container">

  <table class="table">
    <thead>
      <th>Book Name</th>
      <th>Author</th>
      <th colspan = "3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= link_to "Show", book_path(book) %> </td>
        <td><%= link_to "Edit", edit_book_path(book) %> </td>
        <td><%= link_to "Remove", book_path(book), method: :delete %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Add a book", new_book_path %>

</div>
