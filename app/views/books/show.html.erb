<h1 class="jumbotron">Your book</h1>

<div class="container">

  <table class="table">
    <thead>
      <th>Book Name</th>
      <th>Author</th>
      <th colspan = "3"></th>
    </thead>
    <tbody>
      <tr>
        <td><%= @book.name %></td>
        <td><%= @book.author %></td>
        <td><%= link_to "Edit", edit_book_path(@book) %> </td>
        <td><%= link_to "Remove", book_path(@book), method: :delete %> </td>
      </tr>
    </tbody>
  </table>

  <%= link_to "Back to home", books_path %>

</div>
