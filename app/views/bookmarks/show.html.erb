<h1 class="jumbotron">Your bookmark</h1>

<div class="container">

  <table class="table">
    <thead>
      <th>Page</th>
      <th>Description</th>
      <th colspan = "3"></th>
    </thead>
    <tbody>
      <tr>
        <td><%= @bookmark.page %></td>
        <td><%= @bookmark.description %></td>
        <td><%= link_to "Edit", edit_book_bookmark_path(@book, @bookmark) %> </td>
        <td><%= link_to "Remove", book_bookmark_path(@book, @bookmark), method: :delete %> </td>
      </tr>
    </tbody>
  </table>

  <%= link_to "Back to book", book_bookmarks_path %>

</div>
